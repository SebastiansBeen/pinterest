<div class='overdiv-login'>

<p class='header'>Log in</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field1">
    <%= f.label :email, :class =>"email-label" %><br />
    <%= f.email_field :email, autofocus: true, :class =>"email-field" %>
  </div>

  <div class="field2">
    <%= f.label :password , :class =>"password-label"%><br />
    <%= f.password_field :password, autocomplete: "off" , :class =>"password-field"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field3">
      <%= f.check_box :remember_me , :class =>"remember_me-checkbox"%>
      <%= f.label :Husk_mig, :class =>"remember_me-label" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" , :class => 'signup-button3'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
