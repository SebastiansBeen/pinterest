<style type="text/css">
	
	.overdiv-forgot_password {
	  position: relative;
	  margin-left: auto;
	  margin-right: auto;
	  border-right: 1px solid blue;
	  border-left: 1px solid blue;
	  width: 1000px;
	  top: -8px;
	  height: 500px;
	  min-width: 1000px;
	  font-weight: 300;
	}

	.header {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 25px;
  top: -8px;
  color: #333333;

}

  
.field1 {

  position: absolute;
  left: 250px;
  width: 410px;
  height: 30px;
  top: 100px;
}

.email-label {
  position: absolute;
  color: #333333;
  font-size: 20px;
  line-height: 29px;
}

.email-field {
  position: absolute;
  width: 300px;
  height: 25px;
  color: #333333;
  padding-left: 15px;
  border:2px solid #e5e5e5;
  border-radius: 25px;
  right: 0px;
  top: 0px;
  outline: none;
  font-size: 16px;
  font-weight: 200;
}

.actions {
	position: absolute;
	width: 200px;
	left: 400px;
	height: 30px;
	top: 150px;
}

.reset_password-button {
  position: absolute;
  border:2px solid #ffffff;
  height: 30px;
  width: 120px;
  right:40px;
  border-radius: 30px;
  background-color: #77d5a6;
  color: #ffffff;
  font-size: 13px;
  font-weight: 200;
}

.p1 {
	position: absolute;
	font-size: 12px;
	color: #77d5a6;
	width: 400px;
	text-align: center;
	left: 300px;
	top: 170px;
}

</style>

<div class='overdiv-forgot_password'>

<p class='header'>Har du glemt dit kodeord?</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field1">
    <%= f.label :email , :class => 'email-label'%><br />
    <%= f.email_field :email, autofocus: true , :class => 'email-field'%>
  </div>

  <p class='p1'>Instrukser til gendannelse af password vil blive sendt til din email</p>

  <div class="actions">
    <%= f.submit "Gendan kodeord" , :class => 'reset_password-button'%>
  </div>
<% end %>

</div>


